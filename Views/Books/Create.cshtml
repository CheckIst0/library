@model CourseWork.Models.Book

@{
    ViewData["Title"] = "Добавить";
}

<h1>Добавление</h1>

<h4>Книга</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col">
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" id="floatingInputGrid" placeholder="ыекштп" />
                <label asp-for="Name" for="floatingInputGrid"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <select asp-for="AuthorId" id="floatingSelectGrid" class="form-select"
                    asp-items="ViewBag.AuthorId"></select>
                <label asp-for="AuthorId" for="floatingSelectGrid"></label>
            </div>
        </div>
    </div>
    <div class="form-floating mb-3">
        <textarea placeholder="Description" asp-for="Description" class="form-control" id="floatingTextarea" style="height: 100px"></textarea>
        <label asp-for="Description" for="floatingTextarea"></label>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-floating mb-3">
                <input asp-for="ImageSource" class="form-control" id="floatingInputGrid" placeholder="ыекштп" />
                <label asp-for="ImageSource" for="floatingInputGrid"></label>
                <span asp-validation-for="ImageSource" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <select asp-for="PublisherId" class="form-select" id="floatingSelectGrid"
                    asp-items="ViewBag.PublisherId"></select>
                <label asp-for="PublisherId" for="floatingSelectGrid"></label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <input min="0" max="1000" asp-for="Quantity" class="form-control" id="floatingInputGrid" />
                <label asp-for="Quantity" class="control-label" for="floatingInputGrid"></label>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-floating mb-3">
                <select asp-for="FormId" class="form-select" id="floatingSelectGrid"
                    asp-items="ViewBag.FormId"></select>
                <label asp-for="FormId" for="floatingSelectGrid"></label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <select asp-for="GenreId" id="floatingSelectGrid" class="form-select"
                    asp-items="ViewBag.GenreId"></select>
                <label asp-for="GenreId" for="floatingSelectGrid"></label>
            </div>
        </div>
        <div class="col">
            <div class="form-floating mb-3">
                <select asp-for="StyleId" id="floatingSelectGrid" class="form-select"
                    asp-items="ViewBag.StyleId"></select>
                <label asp-for="StyleId" for="floatingSelectGrid"></label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-floating mb-3 col-sm-1">
            <input type="submit" value="Создать" class="btn btn-success" />
        </div>
        <div class="col">
            <a asp-action="Index" class="btn btn-primary">Назад к списку</a>
        </div>
    </div>

</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
