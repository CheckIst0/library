@model Book

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы точно хотите удалить книгу?</h3>
<br>
<div class="">
    <div class="row">
        <div class="col-md-3">
            <img src="~/images/@Model.ImageSource" alt="@Model.Name" class="rounded float-start" height="320"
                width="240">
        </div>
        <div class="col-md-8 mb-3">
            <h4>@Model.Name</h4>
            <h5>@Model.Author.Name</h5>
            <p>@Model.Description</p>
            <p>Издательство: @Model.Publisher.Name</p>
            @if (Model.Quantity == 0)
            {
                <p>Нет в наличии</p>
            }
            else
            {
                <p>Количество: @Model.Quantity</p>
            }
            <p>Жанр: @Model.Genre.Name</p>
            <p>Форма: @Model.Form.Name</p>
            <p>Направление: @Model.Style.Name</p>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Удалить" class="btn btn-danger me-2" />
    <a class="btn btn-primary" asp-action="Index">Назад к списку</a>
</form>
</div>
