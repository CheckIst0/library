@model BookViewModel

@{
    ViewData["Title"] = "Книга";
}

<div class="row">
    <div class="col-md-3">
        <img src="~/images/@Model.Book.ImageSource" alt="@Model.Book.Name" class="rounded float-start" height="320"
            width="240">
    </div>
    <div class="col-md-8 mb-3">
        <h4>@Model.Book.Name</h4>
        <h5><a class="link-body-emphasis link-underline-opacity-25" asp-controller="Authors" asp-action="Details"
                asp-route-id="@Model.Book.AuthorId">@Model.Book.Author.Name</a></h5>
        <p>@Model.Book.Description</p>
        <p>Издательство: <a>@Model.Book.Publisher.Name</a></p>
        @if (Model.Book.Quantity == 0)
        {
            <p>Нет в наличии</p>
        }
        else
        {
            <p>Количество: @Model.Book.Quantity</p>
        }
        <p>Форма: @Model.Book.Form.Name</p>
        <p>Направление: <abbr title="@Model.Book.Style.Description">@Model.Book.Style.Name</abbr></p>
        <p>Жанр: @Model.Book.Genre.Name</p>
    </div>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-success me-2" asp-action="Edit" asp-route-id="@Model?.Book.Id">Редактировать</a>
        <a class="btn btn-danger me-2" asp-action="Delete" asp-route-id="@Model?.Book.Id">Удалить</a>
    }
    <a class="btn btn-primary" asp-action="Index">Назад</a>
</div>
<hr />
<h4 style="text-align: center;">Цитаты из книги</h4>
@if (User.IsInRole("Admin"))
{
    <a asp-controller="Quotes" asp-action="Create" class="btn btn-success mb-3">Добавить</a>
}
<div class="mb-5">
    @foreach (var item in Model.Book.Quotes)
    {
        <div class="card mb-3">
            <div class="card-header">
                Цитата
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    @foreach (string str in item.Text.Split("\r\n"))
                    {
                        <p>@str</p>
                    }
                </blockquote>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="card-footer text-body-secondary">
                    <a asp-controller="Quotes" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Изменить</a>
                    <a asp-controller="Quotes" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                </div>
            }
        </div>
    }
</div>
<h4 style="text-align: center;">Другие книги автора:</h4>
<div class="mb-5">
    @if (Model?.Book.Author.Books.Count() == 1)
    {
        <p class="lead" style="text-align: center;">В библиотеке нет других книг данного автора(((</p>
    }
    @foreach (var item in Model.Book.Author.Books)
    {
        if (item.Id != Model.Book.Id)
        {
            <div class="card mb-3 w-auto shadow" style="background-color: rgb(242, 250, 250);">
                <div class="row g-0">
                    <div class="col-md-1">
                        <img src="~/images/@item.ImageSource" class="img-fluid rounded-start" alt="@item.Name" width="120"
                            height="160">
                    </div>
                    <div class="col-md">
                        <div class="card-body text-start">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-subtitle">@item.Author.Name</h6>
                            <p class="card-text text-break fs-6"><small class="text-body-secondary">
                                    <span class="d-inline-block">@item.Description</span></small></p>
                            <a asp-action="Details" asp-route-id="@item.Id" class="stretched-link card-link"></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
<div class="mb-3">
    <h4 style="text-align: center;">Отзывы</h4>
    @foreach (var item in Model.Reviews)
    {
        <div class="card">
            <div class="card-header">
                @item.User.Lastname @item.User.Name
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>Оценка: @item.Rating</p>
                    <p>@item.Text</p>
                </blockquote>
            </div>
        </div>
    }
</div>
<div class="mx-auto text-center w-50">
    <main>
        <form method="post">
            <div class="row g-2">
                <div class="my-3 col-md-2">
                    <input type="number" class="form-control" id="floatingInputGrid" placeholder="100500" name="Rating"
                        required min="1" max="5">
                </div>
                <div class="my-3 col-md-10">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="floatingInputGrid"
                            placeholder="Оставьте свой отзыв..." name="Text" required>
                        <button type="submit" class="btn btn-primary">Отправить</button>
                    </div>
                </div>
            </div>
        </form>
    </main>
</div>