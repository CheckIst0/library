@model CourseWork.Models.IssueHistory

@{
    ViewData["Title"] = "Детали";
}
<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Model.User.Lastname @Model.User.Name @Model.User.Patronymic
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class="col-sm-10">
            @Model.IssueDate.ToString("d")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstimatedReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Model.EstimatedReturnDate.ToString("d")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FactReturnDate)
        </dt>
        <dd class="col-sm-10">
            @if (Model.FactReturnDate != null)
            {
                @Model.FactReturnDate?.ToString("d")
            }
            else
            {
                <div>Не возвращена</div>
            }
        </dd>
    </dl>
</div>
<div class="row">
    @* <a class="btn btn-success me-2" asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> *@
    @if (Model.FactReturnDate == null)
    {
        <div class="col-auto">
            <form asp-action="Details">
                <input type="hidden" asp-for="FactReturnDate" value="@DateTime.Today">
                <input type="submit" value="Возвращена" class="btn btn-success">
            </form>
        </div>
    }
    <div class="col-auto">
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.Id">Удалить</a>
    </div>
    <div class="col-auto">
        <a class="btn btn-primary" asp-action="Index">К списку</a>
    </div>
</div>
