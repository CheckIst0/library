@model CourseWork.Models.IssueHistory

@{
    ViewData["Title"] = "Удаление";
}
<h3>Вы точно хотите удалить запись?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Model.User.Lastname @Model.User.Name @Model.User.Patronymic
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class = "col-sm-10">
            @Model.IssueDate.ToString("d")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstimatedReturnDate)
        </dt>
        <dd class = "col-sm-10">
            @Model.EstimatedReturnDate.ToString("d")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FactReturnDate)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.FactReturnDate != null) {
                @Model.FactReturnDate?.ToString("d")
            } else {
                <div>Не возвращена</div>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger me-2" />
        <a asp-action="Index" class="btn btn-primary">К списку</a>
    </form>
</div>
