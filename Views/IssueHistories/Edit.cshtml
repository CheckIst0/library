@model CourseWork.Models.IssueHistory

@{
    ViewData["Title"] = "Редактирование";
}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-floating mb-3">
        <select asp-for="BookId" class="form-select" id="floatingSelect" asp-items="ViewBag.BookId"></select>
        <label asp-for="BookId" for="floatingSelect"></label>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <select asp-for="UserId" class="form-select" id="floatingSelect" asp-items="ViewBag.UserId"></select>
        <label asp-for="UserId" for="floatingSelect"></label>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="IssueDate" type="date" class="form-control" id="floatingInput" placeholder="01.01.2023" />
        <label asp-for="IssueDate" for="floatingInput"></label>
        <span asp-validation-for="IssueDate" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="EstimatedReturnDate" type="date" class="form-control" id="floatingInput"
            placeholder="01.01.2023" />
        <label asp-for="EstimatedReturnDate" for="floatingInput"></label>
        <span asp-validation-for="EstimatedReturnDate" class="text-danger"></span>
    </div>
    @if (Model.FactReturnDate != null)
    {
        <div class="form-floating mb-3">
            <input asp-for="FactReturnDate" type="date" class="form-control" id="floatingInput" placeholder="01.01.2023" />
            <label asp-for="FactReturnDate" for="floatingInput"></label>
            <span asp-validation-for="FactReturnDate" class="text-danger"></span>
        </div>
    }
    <div class="form-group mb-3">
        <input type="submit" value="Сохранить" class="btn btn-success me-2" />
        <a asp-action="Index" class="btn btn-primary">К списку</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
