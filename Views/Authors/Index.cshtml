@model IEnumerable<CourseWork.Models.Author>

@{
    ViewData["Title"] = "Авторы";
}


<div class="row g-2">
    <div class="col-9">
        <input class="mb-3 form-control bs-primary-border-subtle" type="text" name="search" id="searchInput"
            placeholder="Пушкин...">
    </div>
    @if (User.IsInRole("Admin"))
    {
        <div class="col-3">
            <a class="btn btn-success" asp-action="Create">Добавить автора</a>
        </div>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="authors">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="link-body-emphasis" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#authors tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    });
</script>