@model CourseWork.Models.Author

@{
    ViewData["Title"] = "Об авторе";
}

<h1>@Model.Name</h1>
<p class="mb-3">@Model.Biography</p>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-success me-2" asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a>
        <a class="btn btn-danger me-2" asp-action="Delete" asp-route-id="@Model?.Id">Удалить</a>
    }
    <a class="btn btn-primary me-2" asp-action="Index">Назад</a>
</div>
<hr>
@if (Model?.Books.Count() > 0)
{
    <div class="mb-5">
        <h4 style="text-align: center;">Книги</h4>
        @foreach (var item in Model.Books)
        {
            <div class="card mb-3 w-auto shadow" style="background-color: rgb(242, 250, 250);">
                <div class="row g-0">
                    <div class="col-md-1">
                        <img src="~/images/@item.ImageSource" class="img-fluid rounded-start" alt="@item.Name" width="120"
                            height="160">
                    </div>
                    <div class="col-md">
                        <div class="card-body text-start">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-subtitle">@item.Author.Name</h6>
                            <p class="card-text text-break fs-6"><small class="text-body-secondary">
                                    <span class="d-inline-block">@item.Description</span></small></p>
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id"
                                class="stretched-link card-link"></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (@Model?.Awards.Count() > 0 || User.IsInRole("Admin"))
{
    <div class="mb-5">
        <h4 class="text-center">Награды</h4>
        @if (User.IsInRole("Admin")) {
            <a href="#" class="btn btn-success mb-3">Добавить</a>
        }
        @foreach (var item in @Model.Awards)
        {
            <div class="card mb-3">
                <h5 class="card-header">@item.Name</h5>
                <div class="card-body">
                    <p class="card-text">@item.Description</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="#" class="btn btn-success">Изменить</a>
                        <a href="#" class="btn btn-danger">Удалить</a>
                    }
                </div>
                <div class="card-footer text-body-secondary">
                    @item.ReceiptDate.ToString("d")
                </div>
            </div>
        }
    </div>
}