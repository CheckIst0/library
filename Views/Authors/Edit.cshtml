@model CourseWork.Models.Author

@{
    ViewData["Title"] = "Редактирование";
}
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-floating mb-3">
        <input asp-for="Name" class="form-control" id="floatingInput" />
        <label asp-for="Name" class="control-label" for="floatingInput"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <textarea asp-for="Biography" class="form-control" id="floatingTextarea" placeholder="Biography"
            style="height: 100px;"></textarea>
        <label asp-for="Biography" for="floatingTextarea"></label>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Сохранить" class="btn btn-success" />
        <a class="btn btn-primary" asp-action="Index">К списку</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
