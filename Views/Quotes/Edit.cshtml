@model CourseWork.Models.Quote

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактировать</h1>

<h4>Цитата</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="BookId">
    <div class="form-floating mb-3">
        <textarea asp-for="Text" id="floatingTextarea" class="form-control" placeholder="asdf" style="height: 100px;"></textarea>
        <label asp-for="Text" for="floatingTextarea"></label>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-success me-2" />
        <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-primary">Назад</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
